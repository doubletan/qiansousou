<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#EEEEEE"
    android:layout_height="match_parent">
    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_fresco_demo_content"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        style="@style/BannerDefaultStyle"
        app:banner_isNeedShowIndicatorOnOnlyOnePage="true"
        app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_transitionEffect="defaultEffect"
        >
    </cn.bingoogolapple.bgabanner.BGABanner>

    <RelativeLayout
        android:elevation="2dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <RelativeLayout
            android:id="@+id/layout_xiaoe"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_xiaoedai"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/icon_jishuxiaodai"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_xiaoedai"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="急速小贷"
                    android:textColor="#EC407A"/>
                <TextView
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="2dp"
                    android:text="500-50000元"/>
                <TextView
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="最快3分钟到账"
                    android:textColor="#9E9E9E"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:background="#E0E0E0"
            android:layout_centerInParent="true"
            android:layout_height="70dp"/>
        <RelativeLayout
            android:id="@+id/layout_dae"
            android:layout_toRightOf="@id/view"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/iv_daedai"
                android:layout_marginLeft="15sp"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/icon_daedaikuan"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_daedai"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大额贷款"
                    android:textColor="#EC407A"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:text="1万-100万"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="最高可贷100万"
                    android:textSize="12sp"

                    android:textColor="#9E9E9E"/>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:elevation="1dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/iv_gif"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />
        <TextView
            android:textColor="#212121"
            android:textSize="15sp"
            android:id="@+id/text1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_gif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有"/>
        <TextView

            android:textSize="15sp"
            android:id="@+id/text_people"
            android:textColor="#FFAB00"
            android:text="213"
            android:layout_toRightOf="@id/text1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:textColor="#424242"
            android:textSize="15sp"
            android:id="@+id/text3"
            android:layout_toRightOf="@id/text_people"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人成功获得借款"
            />
        <com.sunfusheng.marqueeview.MarqueeView
            android:id="@+id/marquee_view"
            android:layout_marginTop="2dp"
            android:layout_below="@id/text3"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_gif"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:mvAnimDuration="1000"
            app:mvInterval="2000"
            app:mvTextSize="13sp"
            app:mvTextColor="#9E9E9E"
            app:mvSingleLine="true">
        </com.sunfusheng.marqueeview.MarqueeView>
    </RelativeLayout>
    <RelativeLayout
        android:elevation="1dp"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_remen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_remen"/>
        <TextView
            android:layout_toRightOf="@id/iv_remen"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:textColor="#323232"
            android:text="推荐"/>
    </RelativeLayout>
</LinearLayout>