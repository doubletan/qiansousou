<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:background="#FCFCFC"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    android:orientation="vertical"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">
    <View
        android:background="#BDBDBD"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/layout_logo"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_height="75dp">
        <com.itheima.roundedimageview.RoundedImageView
            android:id="@+id/head"
            android:elevation="2dp"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/logo"
            app:riv_border_width="1dip"
            app:riv_border_color="#BDBDBD"
            app:riv_oval="true" />
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/tv_ProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="手机贷"
                />
            <TextView
                android:id="@+id/tv_Summry"
                android:textSize="13sp"
                android:layout_marginTop="9dp"
                android:textColor="#616161"
                android:layout_toRightOf="@id/tv_ProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/success"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#757575"
                android:textSize="12sp"
                android:text="成功率"/>

            <com.example.xlhratingbar_lib.XLHRatingBar
                xmlns:lxhRatingBar="http://schemas.android.com/apk/res-auto"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/ratingBar"
                android:layout_toRightOf="@id/success"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                lxhRatingBar:canEdit="false"
                lxhRatingBar:countSelected="5"
                lxhRatingBar:differentSize="false"
                lxhRatingBar:dividerWidth="1dp"
                lxhRatingBar:starCount="5"
                lxhRatingBar:stateResId="@drawable/comment_ratingbar_selector"
                lxhRatingBar:widthAndHeight="16dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/lilv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="13sp"
                android:text="费率"
                />
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/rate"
                android:layout_below="@id/lilv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#FFAB00"
                android:text="0.09%/月"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="申请人数"
                />
            <TextView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_number"
                android:id="@+id/tv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="120020人"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>